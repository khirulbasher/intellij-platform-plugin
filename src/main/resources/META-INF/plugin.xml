<idea-plugin>
    <id>com.lemon.idea.plugin</id>
    <name>A Plugin By Lemon</name>
    <version>1.0</version>
    <vendor email="lemon.bashar@gmail.com" >Lemon</vendor>

    <change-notes><![CDATA[
      Initially Released<br>
      <em>A Plugin by Lemon</em>
    ]]>
    </change-notes>

    <description><![CDATA[
        Not Described Yet
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->


        <group id="Plugin.Text" text="Text" description="A Plugin By Lemon">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <group id="Plugin.Text.Case" text="Text Case Processing" description="Text Case Related Actions" popup="true">
                <!--Text Case Switch-->
                <action id="com.lemon.idea.plugin.text.impl.CaseSwitchProcessor" class="com.lemon.idea.plugin.text.impl.CaseSwitchProcessor" text="To Upper/Lower Case"
                        description="To Upper/Lower Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToUpperCase" class="com.lemon.idea.plugin.text.impl.ToUpperCase" text="To Upper Case"
                        description="To Upper Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToLowerCase" class="com.lemon.idea.plugin.text.impl.ToLowerCase" text="To Lower Case"
                        description="To Lower Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <!--Text Case Switch-->

                <!--Text Type Switch-->

                <action id="com.lemon.idea.plugin.text.impl.CaseTypeSwitchCase" class="com.lemon.idea.plugin.text.impl.CaseTypeSwitchCase" text="To Snake/Camel Case"
                        description="To Snake/Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToUpperCamelCase" class="com.lemon.idea.plugin.text.impl.ToUpperCamelCase" text="To Upper Camel Case"
                        description="To Upper Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToLowerCamelCase" class="com.lemon.idea.plugin.text.impl.ToLowerCamelCase" text="To Lower Camel Case"
                        description="To Lower Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>


                <action id="com.lemon.idea.plugin.text.impl.ToUpperSnakeCase" class="com.lemon.idea.plugin.text.impl.ToUpperSnakeCase" text="To Upper Snake Case"
                        description="To Upper Snake Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToLowerSnakeCase" class="com.lemon.idea.plugin.text.impl.ToLowerSnakeCase" text="To Lower Snake Case"
                        description="To Lower Snake Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>

                <action id="com.lemon.idea.plugin.text.impl.ToUpperFlatSnakeCase" class="com.lemon.idea.plugin.text.impl.ToUpperFlatSnakeCase" text="To Upper Flat Snake Case"
                        description="To Upper Flat Snake Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.text.impl.ToLowerFlatSnakeCase" class="com.lemon.idea.plugin.text.impl.ToLowerFlatSnakeCase" text="To Lower Flat Snake Case"
                        description="To Lower Flat Snake Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>

                <!--Text Type Switch-->
            </group>

        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.lemon.idea.plugin.PluginMenu</implementation-class>
        </component>
    </application-components>
</idea-plugin>