<idea-plugin>
  <idea-version since-build="182" until-build="192"/>
  <id>com.lemon.idea.plugin</id>
  <name>For Text Processing and Text insertion</name>
  <version>1.0-SNAPSHOT</version>
  <vendor email="lemon.bashar@gmail.com">Lemon</vendor>
  <change-notes>
      A Text Processing Plugin and Text insertion.&lt;br&gt;
      &lt;em&gt;First Release&lt;/em&gt;</change-notes>
  <description>
        A Plugin For Text Processing and Text insertion.
    </description>
  <extensions defaultExtensionNs="com.intellij"/>
  <actions>
    <group id="Plugin.Text" text="Text" description="A Plugin For Text Processing.">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <group id="Plugin.Text.Case" text="Text Case Processing" description="Text Case Related Actions" popup="true">
        <action id="com.lemon.idea.plugin.text.process.CaseSwitchProcessor" class="com.lemon.idea.plugin.text.process.CaseSwitchProcessor" text="To Upper/Lower Case" description="To Upper/Lower Case Convert">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToUpperCaseProcessor" class="com.lemon.idea.plugin.text.process.ToUpperCaseProcessor" text="To Upper Case" description="To Upper Case Convert">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToLowerCaseProcessor" class="com.lemon.idea.plugin.text.process.ToLowerCaseProcessor" text="To Lower Case" description="To Lower Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.CaseTypeSwitchProcessor" class="com.lemon.idea.plugin.text.process.CaseTypeSwitchProcessor" text="To Snake/Camel Case" description="To Snake/Camel Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToUpperCamelCaseProcessor" class="com.lemon.idea.plugin.text.process.ToUpperCamelCaseProcessor" text="To Upper Camel Case" description="To Upper Camel Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToLowerCamelCaseProcessor" class="com.lemon.idea.plugin.text.process.ToLowerCamelCaseProcessor" text="To Lower Camel Case" description="To Lower Camel Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToUpperSnakeCaseProcessor" class="com.lemon.idea.plugin.text.process.ToUpperSnakeCaseProcessor" text="To Upper Snake Case" description="To Upper Snake Case Convert">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToLowerSnakeCaseProcessor" class="com.lemon.idea.plugin.text.process.ToLowerSnakeCaseProcessor" text="To Lower Snake Case" description="To Lower Snake Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToUpperFlatSnakeCaseProcessor" class="com.lemon.idea.plugin.text.process.ToUpperFlatSnakeCaseProcessor" text="To Upper Flat Snake Case" description="To Upper Flat Snake Case Convert">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action id="com.lemon.idea.plugin.text.process.ToLowerFlatSnakeCaseProcessor" class="com.lemon.idea.plugin.text.process.ToLowerFlatSnakeCaseProcessor" text="To Lower Flat Snake Case" description="To Lower Flat Snake Case">
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
        </action>
        <action class="com.lemon.idea.plugin.text.process.ToWordMakingProcessor" id="com.lemon.idea.plugin.text.process.ToWordMakingProcessor" text="Convert To Words" description="Convert To Words">
          <keyboard-shortcut first-keystroke="ctrl alt w" keymap="$default" second-keystroke="c" remove="true"/>
        </action>
      </group>
    </group>
  </actions>
  <application-components>
    <component>
      <implementation-class>com.lemon.idea.plugin.PluginMenu</implementation-class>
    </component>
  </application-components>
</idea-plugin>
