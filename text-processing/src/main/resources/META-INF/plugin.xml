<idea-plugin>
    <id>com.lemon.idea.plugin</id>
    <name>For Text Processing and Text insertion</name>
    <version>1.0</version>
    <vendor email="lemon.bashar@gmail.com" >Lemon</vendor>

    <change-notes><![CDATA[
      Initially Released<br>
      <em>A Plugin For Text Processing.</em>
    ]]>
    </change-notes>

    <description><![CDATA[
        A Plugin For Text Processing and Text insertion.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->


        <group id="Plugin.Text" text="Text" description="A Plugin For Text Processing.">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <group id="Plugin.Text.Case" text="Text Case Processing" description="Text Case Related Actions" popup="true">
                <!--Text Case Switch-->
                <action id="com.lemon.idea.plugin.textprocessing.process.CaseSwitchProcessor" class="com.lemon.idea.plugin.textprocessing.process.CaseSwitchProcessor" text="To Upper/Lower Case"
                        description="To Upper/Lower Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToUpperCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToUpperCaseProcessor" text="To Upper Case"
                        description="To Upper Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToLowerCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToLowerCaseProcessor" text="To Lower Case"
                        description="To Lower Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <!--Text Case Switch-->

                <!--Text Type Switch-->

                <action id="com.lemon.idea.plugin.textprocessing.process.CaseTypeSwitchProcessor" class="com.lemon.idea.plugin.textprocessing.process.CaseTypeSwitchProcessor" text="To Snake/Camel Case"
                        description="To Snake/Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToUpperCamelCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToUpperCamelCaseProcessor" text="To Upper Camel Case"
                        description="To Upper Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToLowerCamelCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToLowerCamelCaseProcessor" text="To Lower Camel Case"
                        description="To Lower Camel Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>


                <action id="com.lemon.idea.plugin.textprocessing.process.ToUpperSnakeCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToUpperSnakeCaseProcessor" text="To Upper Snake Case"
                        description="To Upper Snake Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToLowerSnakeCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToLowerSnakeCaseProcessor" text="To Lower Snake Case"
                        description="To Lower Snake Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>

                <action id="com.lemon.idea.plugin.textprocessing.process.ToUpperFlatSnakeCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToUpperFlatSnakeCaseProcessor" text="To Upper Flat Snake Case"
                        description="To Upper Flat Snake Case Convert">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>
                <action id="com.lemon.idea.plugin.textprocessing.process.ToLowerFlatSnakeCaseProcessor" class="com.lemon.idea.plugin.textprocessing.process.ToLowerFlatSnakeCaseProcessor" text="To Lower Flat Snake Case"
                        description="To Lower Flat Snake Case">
                    <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt C" second-keystroke="C" remove="true"/>
                </action>

                <action class="com.lemon.idea.plugin.textprocessing.process.ToWordMakingProcessor" id="com.lemon.idea.plugin.textprocessing.process.ToWordMakingProcessor" text="Convert To Words" description="Convert To Words">
                    <keyboard-shortcut first-keystroke="ctrl alt w" keymap="$default" second-keystroke="c" remove="true"/>
                </action>
                <!--Text Type Switch-->
            </group>

        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.lemon.idea.plugin.PluginMenu</implementation-class>
        </component>
    </application-components>
</idea-plugin>